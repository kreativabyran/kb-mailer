{
  "name": "kreativabyran/kb-mailer",
  "version": "1.8.0",
  "description": "Provides a simple way of building and sending templated emails in WordPress",
  "require": {
    "pablo-sg-pacheco/wp-namespace-autoloader": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "scripts": {
    "post-install-cmd": [
      "vendor\\squizlabs\\php_codesniffer\\bin\\phpcs.bat --config-set installed_paths ..\\..\\wp-coding-standards\\wpcs\\",
      "vendor\\squizlabs\\php_codesniffer\\bin\\phpcs.bat --config-set default_standard WordPress-Extra"
    ]
  },
  "archive": {
    "exclude": [
      ".gitignore",
      ".gitattributes",
      ".lando.yml",
      "composer.json",
      "composer.lock",
      "!vendor/",
      "wordpress/",
      "test-theme/",
      "*.zip"
    ]
  }
}
