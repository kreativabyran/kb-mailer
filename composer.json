{
  "name": "kreativabyran/kb-mailer",
  "description": "Provides a simple way of building and sending templated emails in WordPress",
  "require-dev": {
    "kreativabyran/kb-wpcs": "^1.0.2"
  },
  "scripts": {
    "post-install-cmd": [
      "[ $COMPOSER_DEV_MODE -eq 0 ] || vendor\\squizlabs\\php_codesniffer\\bin\\phpcs.bat --config-set default_standard WordPress-KB"
    ],
    "post-update-cmd": [
      "[ $COMPOSER_DEV_MODE -eq 0 ] || vendor\\squizlabs\\php_codesniffer\\bin\\phpcs.bat --config-set default_standard WordPress-KB"
    ]
  },
  "autoload": {
    "files": [
      "setup.php"
    ],
    "psr-4": {
      "KB_Mailer\\": "includes/"
    }
  },
  "archive": {
    "exclude": [
      ".gitignore",
      ".gitattributes",
      ".lando.yml",
      "composer.json",
      "composer.lock",
      "!vendor/",
      "wordpress/",
      "test-theme/",
      "*.zip"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
